    <rect x="-80" y="-60" width="160" height="120" rx="8" fill="#0f172a" stroke="#334155" stroke-width="2"/>
    
    <!-- Browser header -->
    <rect x="-80" y="-60" width="160" height="24" rx="8" fill="#1e293b"/>
    <rect x="-80" y="-44" width="160" height="8" fill="#334155"/>
    
