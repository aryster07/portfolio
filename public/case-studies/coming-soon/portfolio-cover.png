    <rect x="-70" y="-30" width="140" height="8" rx="4" fill="#374151"/>
    <rect x="-70" y="-15" width="100" height="6" rx="3" fill="#4b5563"/>
    <rect x="-70" y="-5" width="120" height="6" rx="3" fill="#4b5563"/>
    
