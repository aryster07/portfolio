    <rect x="30" y="10" width="40" height="30" rx="4" fill="#10b981"/>
    
    <!-- Text -->
    <text x="0" y="70" text-anchor="middle" fill="#f1f5f9" font-family="Inter, sans-serif" font-size="16" font-weight="600">Portfolio Website</text>
    <text x="0" y="90" text-anchor="middle" fill="#94a3b8" font-family="Inter, sans-serif" font-size="12">Personal Showcase</text>
    <text x="0" y="110" text-anchor="middle" fill="#64748b" font-family="Inter, sans-serif" font-size="10">In Progress</text>
